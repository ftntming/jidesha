{
  "manifest_version": 2,

  "name": "__MSG_appName__",
  "description": "__MSG_appDesc__",
  "default_locale": "en",

  "short_name": "Ubity Meet",
  "version": "0.2.9",
  "minimum_chrome_version": "49",
  "icons": {
    "16": "ubity-logo-16x16.png",
    "48": "ubity-logo-48x48.png",
    "128": "ubity-logo-128x128.png"
  },
  "background": {
        "scripts": [
            "background.js",
            "recorder.js",
            "RecordRTC.min.js",
        ],
        "persistent": true
  },
  "permissions": [
      "desktopCapture"
  ],
  "externally_connectable": {
      "matches": [
          "*://meet*.ubity.com/*"
      ]
  }
}
